  type?: string;
  text?: string;
  children?: PlateNode[];
  url?: string;
  alt?: string;
  width?: string | number;
  height?: string | number;
  bold?: boolean;
  italic?: boolean;
  underline?: boolean;
  strikethrough?: boolean;
  code?: boolean;
  color?: string;
  backgroundColor?: string;
  textAlign?: string;
  align?: string;
  start?: number;
  icon?: string;
  date?: string;
  formula?: string;
  texExpression?: string;
  lang?: string;
  checked?: boolean;
  indent?: number;
  listStyleType?: string;
  id?: string;
  background?: string;
  borders?: any;
  kbd?: boolean;
  heading?: string;
  [key: string]: any;
}

/**
 * Convierte contenido JSON de Plate a HTML
 * @param jsonContent - Contenido en formato JSON o string JSON
 * @param standalone - Si es true, genera un documento HTML completo con head y body. Si es false, solo el contenido HTML.
 * @returns HTML generado
 */
